alias vi='vim'
alias ll='ls -lG'
alias lll='ls -lGh'
alias rscp='rsync -a --info=progress2'
alias rsmv='rsync -a --info=progress2 --remove-source-files'
alias sshr='ssh -l root'
alias sshc='ssh -l centos'
alias sshu='ssh -l ubuntu'
alias scpr='scp -r'
alias scpresume='rsync --partial --progress -ae ssh'
alias hosts='sudo vi /etc/hosts'
alias gf='git flow'
alias realias='$EDITOR ~/.aliases; source ~/.aliases'
alias git-archive-here='git archive --format=tar HEAD | gzip'
alias feature='git flow feature'
alias release='git flow release'
alias dix='dig -x'
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"

# these are from Yuval Kogman
alias ts="prove --state=slow,save -j3 -r"
alias tf="prove --state=failed,save -v -r"

# Show Hidden files in Finder
alias finder_s='defaults write com.apple.Finder AppleShowAllFiles TRUE; killAll Finder'

# Hide Hidden files in Finder
alias finder_h='defaults write com.apple.Finder AppleShowAllFiles FALSE; killAll Finder'

alias ps?='ps -ef | grep'
alias s='sudo'

# git
alias gs='git status'
alias gd='git df'
#alias go='git co'
alias gb='git br'
alias gc='git ci'
